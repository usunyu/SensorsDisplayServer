<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.explorer.sensorsapp.MainActivity">

    <Button
        android:id="@+id/accelerometer_sensor"
        android:text="Accelerometer Sensor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:id="@+id/gyroscope_sensor"
        android:text="Gyroscope Sensor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/accelerometer_sensor"
        android:layout_alignParentStart="true"/>

    <Button
        android:id="@+id/magnetic_field_sensor"
        android:text="Magnetic Field Sensor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gyroscope_sensor"
        android:layout_alignParentStart="true"/>

    <Button
        android:id="@+id/gravity_sensor"
        android:text="Gravity Sensor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/magnetic_field_sensor"
        android:layout_alignParentStart="true"/>

    <Button
        android:id="@+id/rotation_vector_sensor"
        android:text="Rotation Vector Sensor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gravity_sensor"
        android:layout_alignParentStart="true"/>
</RelativeLayout>
